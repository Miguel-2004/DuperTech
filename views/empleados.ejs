<!DOCTYPE html>
<html lang="es">
<head>
    <title>Empleados</title>
    <%- include('includes/head') %>
    <style>
        /* Estilo para centrar y agrandar el recuadro */
        .box-centered {
            width: 80%; /* Ajusta el tamaño del recuadro */
            max-width: 1200px;
            margin: 50px auto;
            padding: 20px;
        }

        .list-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #e5e5e5;
        }

        .worker-name {
            flex-grow: 1;
            margin-right: 20px;
        }

        .edit-button {
            margin-left: auto;
        }
    </style>
</head>
<body>

    <%- include('includes/sidebar') %>

    <div class="container">
        <section class="section">
            <div class="box box-centered">
                <h1 class="title">Trabajadores</h1>

                <!-- Search -->
                <div class="field has-addons">
                    <div class="control has-icons-left is-expanded">
                        <input class="input" type="text" placeholder="Buscar">
                        <span class="icon is-small is-left">
                            <i class="fas fa-search"></i>
                        </span>
                    </div>
                </div>

                <!-- Worker List with Edit Button -->
                <div class="list">
                    <% Trabajadores.forEach((Trabajadores) => { %>
                        <div class="list-item">
                            <span class="worker-name"><%= Trabajadores.Nombre_Empleado %></span>
                            <button class="button is-small is-link is-light edit-button">Editar</button>
                        </div>
                    <% }) %>
                </div>
        </section>

                <!-- Boton para añadir trabajador -->
                <div class="has-text-centered mt-5">
                    <button class="button is-success is-medium">Añadir</button>
                </div>
            </div>

            <!-- Modal para añadir trabajador -->
            <div class="modal" id="addWorkerModal">
                <div class="modal-background"></div>
                <div class="modal-card">
                    <header class="modal-card-head">
                        <p class="modal-card-title">Añadir Trabajador</p>
                        <button class="delete" aria-label="close" id="closeModalBtn"></button>
                    </header>
                    <section class="modal-card-body">

                        <!-- Contenido del formulario para añadir trabajador -->
                        <form id="formularioEmpleado" action="/empleado/nuevo" method="POST">
                            <div class="field">
                                <label class="label">Nombre del Trabajador</label>
                                <div class="control">
                                    <input class="input" type="text" name="nombre" placeholder="Nombre" required>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Teléfono</label>
                                <div class="control">
                                    <input class="input" type="text" name="telefono" placeholder="Teléfono" required>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Usuario</label>
                                <div class="control">
                                    <input class="input" type="email" name="usuario" placeholder="Correo electrónico" required>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Password</label>
                                <div class="control">
                                    <input class="input" type="password" name="password" placeholder="Contraseña" required>
                                </div>
                            </div>
                    
                            <!-- Menú desplegable para seleccionar el establecimiento -->
                            <div class="field">
                                <label class="label">Establecimiento:</label>
                                <div class="select">
                                    <select name="ID_Establecimiento" required>
                                        <% establecimiento.forEach((establecimiento) => { %>
                                            <option value="<%= establecimiento.ID_Establecimiento %>">
                                                <%= establecimiento.Nombre_Establecimiento %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>

                            <footer class="modal-card-foot">
                                <button class="button is-success">Guardar</button>
                            </footer>
                        </form> <!-- Fin del form -->

                    </section>
                </div>
            </div>

            <!-- Modal para editar trabajador -->
            <div class="modal" id="editWorkerModal">
                <div class="modal-background"></div>
                <div class="modal-card">
                    <header class="modal-card-head">
                        <p class="modal-card-title">Editar Trabajador</p>
                        <button class="delete" aria-label="close" id="closeEditModalBtn"></button>
                    </header>
                    <section class="modal-card-body">
                        <form>
                            <div class="field">
                                <label class="label">Nombre del Trabajador</label>
                                <div class="control">
                                    <input class="input" type="text" id="editNombre" placeholder="Nombre">
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Puesto</label>
                                <div class="control">
                                    <input class="input" type="text" id="editPuesto" placeholder="Puesto">
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Correo Electrónico</label>
                                <div class="control">
                                    <input class="input" type="email" id="editCorreo" placeholder="Correo Electrónico">
                                </div>
                            </div>
                            <footer class="modal-card-foot">
                                <button class="button is-success" id="saveEditBtn">Guardar</button>
                                <button class="button" id="deleteWorkerBtn">Eliminar</button>
                                <button class="button" id="cancelEditBtn">Cancelar</button>
                            </footer>
                        </form>
                    </section>
                </div>
            </div>

    </div>

    <script>
        // Funcionalidad de Añadir Trabajador
        const addWorkerBtn = document.querySelector('.button.is-success.is-medium');
        const addWorkerModal = document.getElementById('addWorkerModal');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const cancelBtn = document.getElementById('cancelBtn');

        addWorkerBtn.addEventListener('click', () => {
            addWorkerModal.classList.add('is-active');
        });

        closeModalBtn.addEventListener('click', () => {
            addWorkerModal.classList.remove('is-active');
        });

        cancelBtn.addEventListener('click', () => {
            addWorkerModal.classList.remove('is-active');
        });

        // Funcionalidad de Editar Trabajador
        const editWorkerModal = document.getElementById('editWorkerModal');
        const closeEditModalBtn = document.getElementById('closeEditModalBtn');
        const cancelEditBtn = document.getElementById('cancelEditBtn');
        const saveEditBtn = document.getElementById('saveEditBtn');
        const deleteWorkerBtn = document.getElementById('deleteWorkerBtn');
        const editNombre = document.getElementById('editNombre');

        const editButtons = document.querySelectorAll('.edit-button');
        editButtons.forEach((button, index) => {
            button.addEventListener('click', () => {
                editWorkerModal.classList.add('is-active');
                const nombre = document.querySelectorAll('.worker-name')[index].textContent;
                editNombre.value = nombre;
            });
        });

        closeEditModalBtn.addEventListener('click', () => {
            editWorkerModal.classList.remove('is-active');
        });

        cancelEditBtn.addEventListener('click', () => {
            editWorkerModal.classList.remove('is-active');
        });

        saveEditBtn.addEventListener('click', () => {
            alert('Datos guardados exitosamente');
            editWorkerModal.classList.remove('is-active');
        });

        deleteWorkerBtn.addEventListener('click', () => {
            const confirmation = confirm("¿Estás seguro de que deseas eliminar este trabajador?");
            if (confirmation) {
                alert('Trabajador eliminado exitosamente');
                editWorkerModal.classList.remove('is-active');
            }
        });
    </script>

    <%- include('includes/footer') %>
</body>
</html>
