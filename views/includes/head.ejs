<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Duper Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: 60px;
            background-color: #084461;
            position: fixed;
            height: 100%;
            overflow: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        li {
            margin: 15px 0;
        }

        li a {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 50px;
            color: #fff;
            text-decoration: none;
        }

        li a:hover {
            background-color: #094b6c;
            color: white;
        }

        img {
            max-width: 30px;
            max-height: 30px;
        }

        .content {
            margin-left: 80px;
            padding: 20px;
        }
    </style>
</head>
<body>

    <ul>
        <li>
            <a href="#">
                <img id="btn1" src="images/DB_S_ICON.png" alt="Duperbrand_logo">
            </a>          
        </li>      
        <li>
            <a href="#">
                <img id="btn2" src="images/EMP_ICON.png" alt="empleado_logo">
            </a>          
        </li>
        <li>
            <a href="#">
                <img id="btn3" src="images/CLI_ICON.png" alt="cliente_logo">
            </a>  
        </li>
        <li>
            <a href="#">
                <img id="btn4" src="images/TJ_ICON.png" alt="tarjeta_logo">
            </a>  
        </li>
        <li>
            <a href="#">
                <img id="btn5" src="images/PRO_ICON.png" alt="Promo_logo">
            </a>  
        </li>
        <li>
            <a href="#">
                <img id="btn6" src="images/REP_ICON.png" alt="Graf_logo">
            </a>  
        </li>
    </ul>


    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Obtener referencias a los botones
            const btn1 = document.getElementById('btn1');
            const btn2 = document.getElementById('btn2');
            const btn3 = document.getElementById('btn3');

            // Asignar eventos de clic a cada bot√≥n
            btn1.addEventListener('click', function() {
                window.location.href = '/main'; 
            });

            btn2.addEventListener('click', function() {
                window.location.href = '/empleados'; 
            });

            btn3.addEventListener('click', function() {
                window.location.href = '/clientes'; 
            });

            btn6.addEventListener('click', function() {
                window.location.href = '/reportes'; 
            });
        });
    </script>
</body>
</html>
