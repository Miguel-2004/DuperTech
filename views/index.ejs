<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Duper Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <style>
        .login-container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #041e3f;
        }
        .box {
            max-width: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="box has-background-white">
            <h1 class="title has-text-centered">Iniciar Sesión</h1>
            <form action="/login" method="POST">
                <div class="field">
                    <label class="label" for="email">Correo Electrónico</label>
                    <div class="control">
                        <input class="input" id="email" type="email" placeholder="ejemplo@correo.com" required>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="password">Contraseña</label>
                    <div class="control">
                        <input class="input" id="password" type="password" placeholder="********" required>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <button class="button is-link is-fullwidth">Entrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Incluye el archivo login.js -->
    <script src="/public/js/login.js"></script> 
</body>
</html>


