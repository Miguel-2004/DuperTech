<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('includes/head') %> 
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <style>
        .box-centered {
            width: 60%;
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        .chart-container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
        }
        canvas {
            max-height: 400px;
            width: 100%;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <%- include('includes/sidebar') %> 

    <section class="section">
        <div class="container">
            <div class="box box-centered">
                <h1 class="title has-text-centered">Reporte de Sellos por Empleado</h1>
                <div class="chart-container">
                    <canvas id="sellosChart"></canvas>
                </div>
            </div>
        </div>
    </section>

    <script>
        const ctx = document.getElementById('sellosChart').getContext('2d');

        // Generar las etiquetas de la gráfica con el ID del empleado
        const labels = [
          <% sellosPorEmpleado.forEach(function(sello, index) { %>
            '<%= sello.ID_Empleado %>'<% if (index < sellosPorEmpleado.length - 1) { %>, <% } %>
          <% }); %>
        ];

        // Generar los datos de la gráfica a partir del número total de sellos por empleado
        const data = [
          <% sellosPorEmpleado.forEach(function(sello, index) { %>
            <%= sello.Total_Sellos %><% if (index < sellosPorEmpleado.length - 1) { %>, <% } %>
          <% }); %>
        ];

        // Guardar los nombres de los empleados para mostrarlos en el tooltip
        const nombresEmpleados = [
          <% sellosPorEmpleado.forEach(function(sello, index) { %>
            '<%= sello.Nombre_Empleado %>'<% if (index < sellosPorEmpleado.length - 1) { %>, <% } %>
          <% }); %>
        ];

        const sellosData = {
            labels: labels,
            datasets: [{
                label: 'Total Sellos por Empleado',
                data: data,
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        };

        const sellosChart = new Chart(ctx, {
            type: 'bar',
            data: sellosData,
            options: {
                plugins: {
                    tooltip: {
                        callbacks: {
                            // Personalizar el tooltip para mostrar solo el nombre del empleado y el número de sellos
                            title: function() {
                                // No mostrar el título (que sería la etiqueta del eje X)
                                return '';
                            },
                            label: function(tooltipItem) {
                                const nombreEmpleado = nombresEmpleados[tooltipItem.dataIndex];
                                const totalSellos = tooltipItem.raw;
                                return `${nombreEmpleado}: ${totalSellos} sellos`;
                            }
                        }
                    },
                    legend: {
                        display: true,
                        labels: {
                            font: {
                                size: 14
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: {
                            maxRotation: 90,
                            minRotation: 45,
                            font: {
                                size: 14
                            }
                        },
                        title: {
                            display: true,
                            text: 'Empleados',
                            font: {
                                size: 16
                            }
                        }
                    },
                    y: {
                        ticks: {
                            font: {
                                size: 14
                            }
                        },
                        title: {
                            display: true,
                            text: 'Sellos',
                            font: {
                                size: 16
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>
