<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Incluir la sección de la cabecera y establecer el título de la página -->
    <%- include('includes/head') %> 
    <title><%= pageTitle %></title>
    <!-- Cargar Bulma para estilos y definir estilos personalizados -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <style>
        /* Estilo del contenedor principal del reporte */
        .box-centered {
            width: 60%;
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        /* Contenedor de la gráfica para ajustar su tamaño */
        .chart-container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
        }
        /* Ajustar la altura máxima y ancho del canvas de la gráfica */
        canvas {
            max-height: 400px;
            width: 100%;
        }
    </style>
    <!-- Cargar la librería Chart.js para generar la gráfica -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <!-- Incluir la barra lateral desde otro archivo -->
    <%- include('includes/sidebar') %> 

    <section class="section">
        <div class="container">
            <div class="box box-centered">
                <!-- Título principal del reporte -->
                <h1 class="title has-text-centered">Reporte de Sellos por Empleado</h1>
                
                <!-- Contenedor de la gráfica de sellos por empleado -->
                <div class="chart-container">
                    <canvas id="sellosChart"></canvas>
                </div>
            </div>
        </div>
    </section>

    <script>
        // Obtener el contexto del canvas para renderizar la gráfica
        const ctx = document.getElementById('sellosChart').getContext('2d');

        // Generar las etiquetas de la gráfica a partir de los IDs de empleados
        const labels = [
          <% sellosPorEmpleado.forEach(function(sello, index) { %>
            '<%= sello.ID_Empleado %>'<% if (index < sellosPorEmpleado.length - 1) { %>, <% } %>
          <% }); %>
        ];

        // Generar los datos de la gráfica a partir del número total de sellos
        const data = [
          <% sellosPorEmpleado.forEach(function(sello, index) { %>
            <%= sello.Total_Sellos %><% if (index < sellosPorEmpleado.length - 1) { %>, <% } %>
          <% }); %>
        ];

        // Configuración de los datos y apariencia de la gráfica
        const sellosData = {
            labels: labels,
            datasets: [{
                label: 'Total Sellos por Empleado',
                data: data,
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        };

        // Crear y configurar la gráfica de barras usando Chart.js
        const sellosChart = new Chart(ctx, {
            type: 'bar',
            data: sellosData,
            options: {
                scales: {
                    // Configuración del eje X con etiquetas rotadas y título
                    x: {
                        ticks: {
                            maxRotation: 90,
                            minRotation: 45,
                            font: {
                                size: 14
                            }
                        },
                        title: {
                            display: true,
                            text: 'Empleados',
                            font: {
                                size: 16
                            }
                        }
                    },
                    // Configuración del eje Y con título y ajuste de las etiquetas
                    y: {
                        ticks: {
                            font: {
                                size: 14
                            }
                        },
                        title: {
                            display: true,
                            text: 'Sellos',
                            font: {
                                size: 16
                            }
                        }
                    }
                },
                plugins: {
                    // Configuración de la leyenda de la gráfica
                    legend: {
                        display: true,
                        labels: {
                            font: {
                                size: 14
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>
