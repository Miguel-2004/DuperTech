<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('includes/head') %> 
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <style>
        .box-centered {
            width: 60%;
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        .chart-container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
        }
        canvas {
            max-height: 400px;
            width: 100%;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/luxon/2.3.0/luxon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.0.1/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-luxon@1.2.0"></script>
    
</head>
<body>
    <%- include('includes/sidebar') %> 

    <section class="section">
        <div class="container">
            <div class="box box-centered">
                <h1 class="title has-text-centered">Reporte de Sellos por Empleado</h1>
                <div class="chart-container">
                    <canvas id="sellosChart"></canvas>
                </div>
            </div>

            <!-- Nueva gráfica de puntos -->
            <div class="box box-centered">
                <h1 class="title has-text-centered">Promociones Canjeadas a lo Largo del Tiempo</h1>
                <div class="chart-container">
                    <canvas id="promocionesChart"></canvas>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Script para la gráfica de Sellos por Empleado -->
    <script>
        const ctx = document.getElementById('sellosChart').getContext('2d');

        const labels = [
          <% sellosPorEmpleado.forEach(function(sello, index) { %>
            '<%= sello.ID_Empleado %>'<% if (index < sellosPorEmpleado.length - 1) { %>, <% } %>
          <% }); %>
        ];

        const data = [
          <% sellosPorEmpleado.forEach(function(sello, index) { %>
            <%= sello.Total_Sellos %><% if (index < sellosPorEmpleado.length - 1) { %>, <% } %>
          <% }); %>
        ];

        const nombresEmpleados = [
          <% sellosPorEmpleado.forEach(function(sello, index) { %>
            '<%= sello.Nombre_Empleado %>'<% if (index < sellosPorEmpleado.length - 1) { %>, <% } %>
          <% }); %>
        ];

        const sellosData = {
            labels: labels,
            datasets: [{
                label: 'Total Sellos por Empleado',
                data: data,
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        };

        const sellosChart = new Chart(ctx, {
            type: 'bar',
            data: sellosData,
            options: {
                plugins: {
                    tooltip: {
                        callbacks: {
                            title: function() { return ''; },
                            label: function(tooltipItem) {
                                const nombreEmpleado = nombresEmpleados[tooltipItem.dataIndex];
                                const totalSellos = tooltipItem.raw;
                                return `${nombreEmpleado}: ${totalSellos} sellos`;
                            }
                        }
                    },
                    legend: {
                        display: true,
                        labels: {
                            font: { size: 14 }
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: { maxRotation: 90, minRotation: 45, font: { size: 14 } },
                        title: { display: true, text: 'Empleados', font: { size: 16 } }
                    },
                    y: {
                        ticks: { font: { size: 14 } },
                        title: { display: true, text: 'Sellos', font: { size: 16 } }
                    }
                }
            }
        });
    </script>

  <!-- Script para la gráfica de Promociones Canjeadas -->
<script>
    const ctxPromociones = document.getElementById('promocionesChart').getContext('2d');

    // Mostrar mensaje para verificar que el script está corriendo
    console.log("El script para la gráfica de promociones está funcionando");

    // Los datos que vienen de reclamaciones en formato JSON desde EJS
    const promocionesData = [
      <% reclamaciones.forEach(function(promo, index) { %>
        { 
          x: new Date(Date.UTC(<%= promo.mes.split('-')[0] %>, <%= promo.mes.split('-')[1] %> - 1, 1)),
          y: <%= promo.canjeadas %> 
        }<% if (index < reclamaciones.length - 1) { %>, <% } %>
      <% }); %>
    ];

    // Verificar los datos en la consola para asegurarnos de que se generaron correctamente
    console.log("Datos de promociones generados por EJS:", promocionesData);

    // Asegurarse de que las fechas se están construyendo correctamente como objetos Date
    promocionesData.forEach(dato => {
        console.log("Fecha generada (x):", dato.x, "Cantidad (y):", dato.y);
    });

    // Crear la gráfica de Chart.js con los datos generados
    const promocionesChart = new Chart(ctxPromociones, {
        type: 'scatter', // Tipo de gráfico scatter para puntos
        data: {
            datasets: [{
                label: 'Promociones Canjeadas',
                data: promocionesData,  // Usar los datos finales (de la base de datos)
                backgroundColor: 'rgba(75, 192, 192, 0.6)',
                borderColor: 'rgba(75, 192, 192, 1)',
                pointRadius: 5  // Tamaño de los puntos
            }]
        },
        options: {
            scales: {
                x: {
                    type: 'time',  // Eje X de tiempo para mostrar fechas
                    time: {
                        unit: 'month'  // Mostrar por mes
                    },
                    title: {
                        display: true,
                        text: 'Fecha',
                        font: { size: 16 }
                    }
                },
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Promociones Canjeadas',
                        font: { size: 16 }
                    }
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(tooltipItem) {
                            const fecha = tooltipItem.raw.x.toLocaleDateString();
                            const canjeadas = tooltipItem.raw.y;
                            return `Fecha: ${fecha}, Canjeadas: ${canjeadas}`;
                        }
                    }
                }
            }
        }
    });
</script>




</body>
</html>
