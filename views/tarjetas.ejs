<!DOCTYPE html>
<html lang="es">
<head>
    <title>Tarjetas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <%- include('includes/head') %> 
    <style>
        .box-centered {
            width: 80%;
            max-width: 1200px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .tarjeta-info {
            padding: 15px;
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            margin-bottom: 15px;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
        }

        .tarjeta-info strong {
            color: #363636;
        }

        .total-tarjetas {
            text-align: right;
            margin-top: 20px;
            font-weight: bold;
            font-size: 1.2rem;
            color: #084461;
        }

        .hidden {
            display: none;
        }

        .field.has-addons .input {
            box-shadow: none;
            border-radius: 5px;
        }

        .field.has-addons .input:focus {
            border-color: #084461;
            box-shadow: 0 0 0 0.125em #084461;
        }

        .select.is-fullwidth select {
            border-color: #084461;
            border-radius: 5px;
            box-shadow: none;
        }

        .select.is-fullwidth select:focus {
            border-color: #084461;
            box-shadow: 0 0 0 0.125em #084461;
        }

        .add-sello-btn {
            margin-left: 10px;
            background-color: #3273dc;
            color: #fff;
            border: none;
            padding: 8px 12px;
            border-radius: 4px;
            cursor: pointer;
        }

        .add-sello-btn:hover {
            background-color: #275a9e;
        }
    </style>
</head>
<body>

    <%- include('includes/sidebar') %>

    <!-- Main content -->
    <div class="container">
        <section class="section">
            <div class="box box-centered"> 
                <h1 class="title has-text-centered">Tarjetas</h1>

                <div class="field">
                    <label class="label">Filtrar por Sucursal:</label>
                    <div class="control">
                        <div class="select is-fullwidth">
                            <select id="sucursalSelect">
                                <option value="">Todas las Sucursales</option>
                                <% for (let i = 0; i < establecimientos.length; i++) { %>
                                    <option value="<%= establecimientos[i].ID_Establecimiento %>">
                                        <%= establecimientos[i].Nombre_Establecimiento %>
                                    </option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="field has-addons">
                    <div class="control has-icons-left is-expanded">
                        <input class="input" type="text" placeholder="Buscar tarjeta o cliente..." id="searchBar">
                        <span class="icon is-small is-left">
                            <i class="fas fa-search"></i>
                        </span>
                    </div>
                </div>

                <div class="list" id="tarjetasList">
                    <% for (let i = 0; i < tarjetas.length; i++) { %>
                        <div class="tarjeta-info <%= i >= 10 ? 'hidden' : '' %>">
                            <p><strong>ID de Tarjeta:</strong> <%= tarjetas[i].ID_Tarjeta %></p>
                            <p><strong>Cliente:</strong> <%= tarjetas[i].Nombre_Cliente %></p>
                            <p><strong>Sucursal:</strong> <%= tarjetas[i].Nombre_Establecimiento %></p>
                            <p><strong>Número de Sellos:</strong> <%= tarjetas[i].Numero_Sellos %></p>

                            <!-- Botón para abrir la ventana modal de añadir sello -->
                            <button class="add-sello-btn" data-tarjeta-id="<%= tarjetas[i].ID_Tarjeta %>">Añadir Sello</button>
                        </div>
                    <% } %>
                </div>

                <div class="total-tarjetas">
                    Total de Tarjetas: <%= totalTarjetas %>
                </div>
            </div>
        </section>
    </div>
    
    <!-- Ventana Modal para añadir sellos -->
    <div class="modal" id="addSelloModal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Añadir Sello</p>
                <button class="delete" aria-label="close" id="closeAddSelloModal"></button>
            </header>
            <section class="modal-card-body">
                <p>¿Deseas añadir un sello a esta tarjeta?</p>
            </section>
            <footer class="modal-card-foot">
                <button class="button is-success" id="confirmAddSelloBtn">Confirmar</button>
                <button class="button" id="cancelAddSelloBtn">Cancelar</button>
            </footer>
        </div>
    </div>

    <script>
        // Filtrado por sucursal
        document.getElementById('sucursalSelect').addEventListener('change', function() {
            const selectedSucursal = this.value;
            window.location.href = selectedSucursal ? `/tarjetas?sucursalID=${selectedSucursal}` : '/tarjetas';
        });

        // Búsqueda en la lista de tarjetas
        document.getElementById('searchBar').addEventListener('keyup', function() {
            const query = this.value.toLowerCase();
            const items = document.querySelectorAll('.tarjeta-info');

            items.forEach((item, index) => {
                const tarjetaInfo = item.textContent.toLowerCase();
                if (tarjetaInfo.includes(query)) {
                    item.classList.remove('hidden');
                } else {
                    item.classList.add('hidden');
                }

                if (query === '' && index >= 10) {
                    item.classList.add('hidden');
                }
            });
        });

        // Abrir y cerrar la ventana modal para añadir sello
        const addSelloModal = document.getElementById('addSelloModal');
        const closeAddSelloModal = document.getElementById('closeAddSelloModal');
        const cancelAddSelloBtn = document.getElementById('cancelAddSelloBtn');
        const confirmAddSelloBtn = document.getElementById('confirmAddSelloBtn');
        let currentTarjetaID = null;

        // Abrir modal al hacer clic en el botón "Añadir Sello"
        document.querySelectorAll('.add-sello-btn').forEach(button => {
            button.addEventListener('click', function() {
                currentTarjetaID = this.getAttribute('data-tarjeta-id');
                addSelloModal.classList.add('is-active');
            });
        });

        // Cerrar modal al hacer clic en la 'X' o 'Cancelar'
        closeAddSelloModal.addEventListener('click', () => {
            addSelloModal.classList.remove('is-active');
        });

        cancelAddSelloBtn.addEventListener('click', () => {
            addSelloModal.classList.remove('is-active');
        });

        // Confirmar añadir sello
        confirmAddSelloBtn.addEventListener('click', () => {
            // Aquí puedes realizar la acción para añadir un sello en el servidor
            alert(`Sello añadido a la tarjeta con ID: ${currentTarjetaID}`);
            addSelloModal.classList.remove('is-active');
        });
    </script>

    <%- include('includes/footer') %>

</body>
</html>
